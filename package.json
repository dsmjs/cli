{
  "name": "@dsmjs/cli",
  "description": "CLI for our various tools",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "bin": {
    "dsmjs": "bin/dsmjs.js"
  },
  "files": [
    "bin/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "dsmjs/cli",
  "bugs": "https://github.com/dsmjs/cli/issues",
  "homepage": "https://github.com/dsmjs/cli#readme",
  "author": "dsmJS",
  "maintainers": [
    "Matt Travi <npm@travi.org> (https://matt.travi.org/)"
  ],
  "scripts": {
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit": "nyc run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha src/**/*-test.js",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "lint:travis": "travis-lint .travis.yml",
    "clean": "rimraf ./bin",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build"
  },
  "dependencies": {
    "@travi/github-scaffolder": "4.1.1",
    "@travi/javascript-scaffolder": "7.1.3",
    "@travi/project-scaffolder": "7.0.1",
    "@travi/travis-scaffolder-javascript": "1.12.0",
    "travis-token-updater": "1.6.0",
    "update-notifier": "3.0.1",
    "yargs": "13.3.0"
  },
  "devDependencies": {
    "@babel/register": "7.5.5",
    "@dsmjs/babel-preset": "1.0.11",
    "@dsmjs/eslint-config": "1.0.10",
    "@dsmjs/eslint-config-mocha": "1.0.3",
    "@dsmjs/remark-preset-lint": "1.0.0",
    "@travi/any": "2.0.2",
    "ban-sensitive-files": "1.9.2",
    "chai": "4.2.0",
    "codecov": "3.5.0",
    "commitlint-config-travi": "1.3.1",
    "cz-conventional-changelog": "2.1.0",
    "husky": "3.0.1",
    "mocha": "6.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "remark-cli": "6.0.1",
    "rimraf": "2.6.3",
    "rollup": "1.17.0",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-executable": "1.5.0",
    "rollup-plugin-json": "4.0.0",
    "sinon": "7.3.2",
    "travis-lint": "1.0.0"
  }
}
